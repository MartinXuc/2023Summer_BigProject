
.top{
    position: fixed;
    width: 100%;
    height: 80px;
    background-color: #d62f36;
}

.top-row{
    display: flex;
    margin: 48px 0 0 0;
    width: 100%;
}

.top-return{
    position: absolute;
    left: 5%;
    width: 18px;
    height: 18px;
}

.top-title{
    font-size: 18px;
    margin: 0 auto;
    line-height: 20px;
    text-align: center;
}

.chat-area{
    width: 100%;
}

.left-chat{
    width: 100%;
    display: flex;
}

.default-robot-background{
    background-color: rgb(165, 164, 159);
}

.default-user-background{
    background-color: rgb(0, 255, 200);
}

.right-chat{
    width: 100%;
    display: flex;
}

.avatar{
    width: 40px;
    height: 40px;
}

.text-block{
    /* background-color: green; */
    width: 80%;
    min-height: fit-content;
    word-break: normal;

}

.input{
    height: 28px;
    border: solid #24aae9 1px;
}

.input-area{
    width: 98%;
    height: 28px;
    position: absolute;
    left: 1%;
    bottom: 4px;
    display: grid;
    grid-template-columns: 9fr 1fr;
    grid-gap: 4px;
}

.sendButton{
    width: 100%;
    height: 100%; 
    border-radius: 4px;
    background-color: rgb(18, 121, 189);
    text-align: center;
    line-height: 28px;
    color: white;
}



